{
    "name": "haris/pbelajar-php-unit-test",
    "description": "Belajar Unit Testing PHP",
    "type": "project",
    "autoload": {
        "psr-4": {
            "Haris\\Test\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Haris\\Test\\": "tests"
        }
    },
    "authors": [
        {
            "name": "haris2303",
            "email": "hrsccf102@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "9.5.5"
    },
    "scripts": {
        "test": "phpunit --configuration phpunit.xml",
        "test:product": "phpunit --configuration phpunit.xml --testsuite product",
        "test:counter": "phpunit --configuration phpunit.xml --testsuite counter",
        "test:person": "phpunit --configuration phpunit.xml --testsuite person",
        "test:math": "phpunit --configuration phpunit.xml --testsuite math"
    }
}
